{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true
  },
  "include": ["src/**/*"]
}
